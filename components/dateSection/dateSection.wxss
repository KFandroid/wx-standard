/* components/dateSection/dateSection.wxss */
.intro {
  margin: 30px;
  text-align: center;
}

.datePickerContainer {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height:56rpx;
  width: 440rpx;
  margin-right: 20rpx;
  border: 2rpx solid #707070;
}

.btn {
  height: 56rpx;
  line-height: 56rpx;
}

.modal{
  position: absolute;
  top: 0%;
  left: 0%;
  width: 100%;
  height: 2000px;
  background-color: black;
  z-index: 999;
  -moz-opacity: 0.7;
  opacity: 0.70;
  filter: alpha(opacity=70);
}

.date-section {
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 0%;
  width: 100%;
  background-color: white;
  z-index: 1002;
  overflow: auto;
}

.btn-container{
  display: flex;
  padding: 16rpx 16rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #cdcdcd;
  justify-content: space-between;
}

.cancel {
  color:#bbbbbb;
}

.confirm {
  color: rgb(15, 167, 15);
}
