/* components/headMenu/headMenu.wxss */
.menu {
  width: 38rpx;
  height: 68rpx;
  position: absolute;
  right: 22rpx;
  top: 0rpx;
  z-index: 101;
}

.menu-lists {
  position: absolute;
  width: 240rpx;
  background-color: #f3f3f3;
  padding: 14rpx;
  right: -22rpx;
  bottom: -270rpx;
  z-index: 100;
}

.menu-lists.hide {
  display: none;
}

.menu-lists>.list {
  height: 60rpx;
  line-height: 60rpx;
  width: 240rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.menu-lists>.list image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 24rpx;
  margin-left: 32rpx;
  margin-bottom: -8rpx;
}

.menu>image {
  width: 100%;
  height: 100%;
}