.cover{
    overflow: auto;
}
.main-title {
    font-size: 24rpx;
}
.main-title:after{/*清除浮动*/
    content: '';
    display:block;
    clear: both;
}
.main-title .date {
    float: left;
}
.first-title {
    margin-right: 20rpx;
}
.main-title .btn {
    float: right;
    border-left:2rpx solid gray;
}
.second-title{
    font-size: 24rpx;
    width: 100%;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
    border-top: 2rpx solid gray;
    border-bottom: 2rpx dashed gray;
}
.second-title .title{
    display: inline-block;
    margin-right: 30rpx;
}
.second-title .first-title {
    display: inline-block;
}
.label {
    display: flex;
    justify-content: center;
    height: 70rpx;
  }
  
  .icon-img {
    flex: 1;
    height:40rpx;
    line-height: 40rpx;
    max-width: 40rpx;
    /* position: relative; */
  }
  
 .checkbox .title {
    flex:1;
    text-align: left;
    padding-left: 60rpx;
  }

  .error {
      color: red;
  }

  .hide {
      display: none;
  }

