/* components/popup/popup.wxss */

.wx-popup {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  font-size: 28rpx;
  z-index: 2;
}

.popup-container {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 80%;
  z-index: 3;
  max-width: 600rpx;
  border-radius: 10rpx;
  box-sizing: bordre-box;
  transform: translate(-50%, -50%);
  overflow: hidden;
  background: #fff;
}

.wx-popup-title {
  width: 100%;
  padding-top: 40rpx;
  text-align: center;
  font-size: 32rpx;
}

.wx-popup-con {
  margin: 30rpx 20rpx;
  text-align: center;
}

.wx-popup-btn {
  display: flex;
}

.wx-popup-btn view {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-top: 1rpx solid #eaeae9;
}

.btn-ok {
  color: #3ec522;
  border-left: 1rpx solid #eaeae9;
}
