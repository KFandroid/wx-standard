<!--pages/fgPwd/fgPwd.wxml-->
<view >
    <view class="reg reg_acc">
        <view class="reg_title">
            账<view class="blank"></view>号:
        </view>
        <input data-key="tel" class="tele" type="number" placeholder="请输入手机号" name="account" bindinput="gainValue" auto-focus />
        <view class="send_code" bindtap="send_code">
            发送验证码
        </view>
    </view>
    
    <view class="reg reg_vail">
        <view class="reg_title">
            验证码:
        </view>
        <input data-key="code" type="text" placeholder="请输入验证码" name="code"  bindinput="gainValue"/>
    </view>

    <view class="reg reg_pass">
        <view class="reg_title">
            密<view class="blank"></view>码:
        </view>
        <input data-key="pwd" type="password" placeholder="请确认密码" name="pwd"  bindinput="gainValue"/>
    </view>

    <view class="reg reg_pass">
        <view class="reg_title">
            确认密码:
        </view>
        <input data-key="pwd2" type="password" placeholder="请输入密码" name="vpwd"  bindinput="gainValue"/>
    </view>

    <view class="reg_btn">
        <button class="zhuce" type="primary" size="default" plain="{{plain}}"  bindtap="confirm" hover-class="none">确定</button>

    </view>
</view>
