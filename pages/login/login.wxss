@-webkit-keyframes load{
0%{
transform:rotate(0);
}
50%{
transform:rotate(160deg);
}
100%{
transform:rotate(360deg);
}
}
.loading{
width: 80rpx;
height: 80rpx;
border: 8rpx solid #aaa;
border-left-color: #ddd;
border-radius: 48rpx;
-webkit-animation:load 1s linear 1s infinite;
margin:0 auto;
}
