/* pages/search/search.wxss */
@import "../../utils/wxss/column.wxss";
@import "../../utils/wxss/flex.wxss";

.search-container {
    margin-top: 20rpx;
    padding-left: 20rpx;
    padding-bottom: 20rpx;
    border-bottom: 1rpx solid gray;
}

.btn-cancel {
    text-align: center;
    color: blue;
}

.input-container {
    border: 2rpx solid gray;
    border-radius: 60rpx;
    
}
.organization{
    justify-content: center;
    align-items: center;
}

.organization .text{
    font-size:20rpx;
    width: 50rpx;
    text-align: center;
    height: 30rpx;
    line-height: 30rpx;
    display: inline-block;
    background: blue;
    color:white;
}

.stock-input {
    margin-left: 30rpx;
}

.stock-info-container{
    font-size: 36rpx;
    height: 108rpx;
    border-bottom: 1rpx solid gray;
}

.stock-info-container view {
    align-items: center;
}

