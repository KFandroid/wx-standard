/* pages/setting/setting.wxss */

page {
    width: 100%;
    height: 100%;
}

.content {
    width: 100%;
    /*height: 100%;*/
}

.tab_header {
    width: 100%;
    text-align: left;
    line-height: 60rpx;
    font-size: 24rpx;
    border-bottom: 1rpx solid gray;
    box-sizing: border-box;
    padding-left: 20rpx;
}

.tab_body {
    width: 100%;
    text-align: left;
    line-height: 60rpx;
    display: none;
    box-sizing: border-box;
    font-size: 24rpx;
}

.tab_body_show {
    display: block;
}

.row {
    width: 100%;
    box-sizing: border-box;
    padding: 10rpx;
    line-height: 40rpx;
    height: 60rpx;
    border-bottom: 1rpx solid gray;
}

radio {
    transform: scale(0.7) translateY(-5rpx);
}

checkbox {
    transform: scale(0.7) ;/*translateY(-40rpx)*/
}

.btn {
    position: absolute;
    bottom: 0;
    width: 100%;
    font-size: 28rpx;
}

.btn view {
    width: 50%;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    border-top: 1rpx solid #eaeae9;
    display: inline-block;
    box-sizing: border-box;
}

.btn-ok {
    color: #3ec522;
    border-left: 1rpx solid #eaeae9;
}

.zxg {
    padding-left: 20rpx;
    font-size: 24rpx;
    color: lightskyblue;
    border-bottom: 1rpx solid gray;
    line-height: 60rpx;
}

.picker {
    height: 60rpx;
    width: 100%;
    line-height: 60rpx;
    border: 1rpx solid gray;
}

input {
    width: 200rpx;
    height:100%;
    min-height: 100%!important;
    display: block;
    /*transform:translateY(-7rpx);*/
    border: 1rpx solid gray;
    padding-left:10rpx;
    
}
.checkbox{
    /*transform: translateY(-10rpx);*/
}

.checkbox,.zhouqi,.input1{
    display:block;
    height:40rpx;
    float:left;
    line-height:40rpx;
}
.zhouqi{
    width:100rpx;
}
.input1{
    width:200rpx;
}
