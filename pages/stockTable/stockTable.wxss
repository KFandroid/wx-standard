.thead{
  line-height: 6vh;
  height:6vh;
  position: sticky;
  top:126rpx;
  background-color: #fff;
  z-index: 99;
}
.thead .flex-cell{
  line-height: 6vh;
  height:6vh;
}

.order{
  position: relative;
}

.order::after {
  content: "▾";
  position: absolute;
  right: -30rpx;
  font-size: 50rpx;
  transition: 0.2s all;
}

.reverse{
  position: relative;
}

.reverse::after {
  content: "▾";
  position: absolute;
  right: -30rpx;
  font-size: 50rpx;
  transform: rotate(-180deg);
}

.last::after {
    right:50rpx;
}